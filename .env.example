# ============================================
# Основные настройки
# ============================================
MODE=NORMAL
LOG_LEVEL=INFO

# ============================================
# Директории
# ============================================
INVOICES_DIR=/app/invoices
OUTPUT_DIR=/app/output
LOGS_DIR=/app/logs
TEMP_DIR=/app/output/temp
EXAMPLES_DIR=/app/examples

# ============================================
# Gemini API Configuration
# ============================================
GEMINI_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TIMEOUT=300

# ============================================
# Prompts
# ============================================
PROMPTS_DIR=/app/prompts
PROMPT_HEADER_PATH=/app/prompts/header.txt
PROMPT_ITEMS_PATH=/app/prompts/items.txt
VISION_SEED=random

# ============================================
# Image Enhancement - КРИТИЧНО ИЗ СТАРОГО ПРОЕКТА
# ============================================
ENABLE_IMAGE_ENHANCEMENT=true

# Upscaling
IMAGE_UPSCALE_FACTOR=2.0

# Denoising
IMAGE_DENOISE_STRENGTH=0.5

# Basic adjustments
IMAGE_BRIGHTNESS_FACTOR=1.05
IMAGE_CONTRAST_FACTOR=1.4
IMAGE_SHARPNESS_FACTOR=1.3
IMAGE_COLOR_FACTOR=1.0

# Unsharp mask
IMAGE_UNSHARP_RADIUS=1.2
IMAGE_UNSHARP_PERCENT=150
IMAGE_UNSHARP_THRESHOLD=3

# Binarization - КРИТИЧНО для таблиц
IMAGE_BINARIZE=true
IMAGE_BINARIZE_THRESHOLD=180

# Dilation - КРИТИЧНО для тонких цифр
IMAGE_DILATE=true
IMAGE_DILATE_KERNEL=1

# Output settings
IMAGE_DPI=600
IMAGE_FORMAT=PNG
IMAGE_QUALITY=98

# Generation settings для Gemini API
IMAGE_TEMPERATURE=0
IMAGE_TOP_P=0.95
IMAGE_MAX_OUTPUT_TOKENS=90000

# ============================================
# PDF Processing
# ============================================
PDF_PROCESSING_MODE=HYBRID
PDF_IMAGE_DPI=300
PDF_MAX_PAGES=50
PDF_TEXT_THRESHOLD=100

# ============================================
# Export Settings
# ============================================
EXPORT_EXCEL_ENABLED=true
EXPORT_CRM_ENABLED=false
